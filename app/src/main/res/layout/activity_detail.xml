<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/detail_movie_title"
        android:background="#80CBC4"
        android:text="Chappie"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/detail_poster_iv"
            android:layout_weight="0.4"
            android:background="@drawable/poster1"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:gravity="left"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_horizontal|left"
            android:orientation="vertical">

            <TextView
                android:padding="4dp"
                android:id="@+id/detail_release_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015" />

            <TextView
                android:padding="4dp"
                android:id="@+id/detail_movie_length_tv"
                android:layout_width="wrap_content"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:text="90min" />

            <TextView
                android:padding="4dp"
                android:id="@+id/rdetail_anking_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.2/10" />

            <Button
                android:padding="4dp"
                android:background="#80CBC4"
                android:id="@+id/detail_favorites_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mark as \nfavorite" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:id="@+id/detail_movie_description"
        android:text="@string/lorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#004D40"/>
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Trailers:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/ic_play_arrow_black_24px"
                    android:id="@+id/trailer_play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/trailer1_tv"
                    android:text="Trailer 1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>